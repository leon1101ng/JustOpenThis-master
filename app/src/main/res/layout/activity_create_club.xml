<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FanClub.CreateClub">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:theme="@style/AppTheme.AppBarOverlay"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:id="@+id/CreateEventTitle"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Fan Club Creation" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/BackToMenu"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back1" />



        </android.support.v7.widget.Toolbar>




    </android.support.design.widget.AppBarLayout>

    <ImageButton
        android:id="@+id/ClubPicture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="27dp"
        android:background="@drawable/ic_productsimg"
        android:layout_marginTop="73dp" />


    <EditText
        android:id="@+id/Club_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="194dp"
        android:background="#ffffff"
        android:hint="Please Enter Club Name"
        android:padding="8dp"
        android:textSize="14sp" />


    <EditText
        android:id="@+id/ClubTopic"
        android:layout_width="match_parent"
        android:layout_height="141dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="239dp"
        android:background="#ffffff"
        android:hint="What topic could you like to discuss?"
        android:padding="8dp"
        android:textSize="14sp" />

    <Button
        android:id="@+id/Create_Club"
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp"
        android:background="@drawable/registerbutton"
        android:text="Create Club" />

</RelativeLayout>