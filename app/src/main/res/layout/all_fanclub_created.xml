<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layer1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fanclub_picture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:id="@+id/fanclub_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Club Topic"
                android:textSize="16sp"
                android:layout_marginLeft="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fanclub_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Club Name"
                android:textSize="11sp"
                android:layout_marginLeft="12dp"
                android:textColor="#C5C2C2"/>

            <TextView
                android:id="@+id/fanclub_creator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Club Creator"
                android:textSize="12sp"
                android:layout_marginLeft="12dp"
                android:textColor="#C5C2C2"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>